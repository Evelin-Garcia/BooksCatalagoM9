<div class="container">
    <div class="row">
      <div class="col-10">
<h1>Agregar Lectores a Libros</h1>

<%= form_with(model:[@book, @reader]) do |form| %>
    <div class="field">
        <%= form.label :nombre %>
        <%= form.text_field :first_name %>
    </div>
<br>
    <div class="field">
        <%= form.label :apellido %>
        <%= form.text_field :last_name %>
    </div>
<br>
    <div class="field">
        <%= form.label :edad %>
        <%= form.number_field :age %>
    </div>
<br>
    <div class="field">
        <%= form.label :comentario %>
        <%= form.text_field :comment %>
    </div>
    <br>
    <div class="field">
        <%= form.submit "Crear Lector", class: 'btn btn-info mt-3'%>
    </div>
<% end %>
</div>
</div>
</div>
<br><br>
