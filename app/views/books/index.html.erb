<p id="notice"><%= notice %></p>
<div class="container">
  <div>
    <nav class="navbar navbar-expand-sm bg-secondary navbar-light">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <%= link_to 'Home', home_path, class: 'btn btn-dark'%>
        </li>
        <li class="nav-item">  
          <% if user_signed_in? %>
          <%= link_to 'Ingresar Nuevo Libro', new_book_path, class: 'btn btn-info'%>
          <% end %>
        </li>
      </ul>
    </nav>  
  </div>
  <div class="row">
    <div class="col-12"> 
<br>
<h1>Libros</h1>

<div class="table-responsive-lg">
<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>Título</th>
      <th>Autor</th>
      <th>Descripción</th>
      <th>Imagen url</th>
      <th>Fecha de Publicación</th>
      <th>Precio Promedio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><b><%= book.title %></b></td>
        <td><%= book.author %></td>
        <td><%= book.description %></td>
        <td><%= book.image_url %></td>
        <td><%= book.publication_date %></td>
        <td><%= book.price %></td>

        <% if user_signed_in? %>
        <td><%= link_to 'Ver', book, class: 'btn btn-outline-success' %></td>
        <% end %>
        <% if (user_signed_in? && (current_user == book.user)) %>
            <td><%= link_to 'Editar', edit_book_path(book), class: 'btn btn-outline-warning' %></td>
            <td><%= link_to 'Eliminar', book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger'%></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br><br>
    </div>
  </div>
</div>
